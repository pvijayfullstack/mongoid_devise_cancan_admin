<%= form_for("user", :url => user_session_path) do |f| %>
<div class="fields">
	<%= f.label :email %><br />
  <%= f.text_field :email %><br />
	<%= f.label :password %><br />
  <%= f.password_field :password %>
</div>
<div class="actions">
  <%= f.submit 'Sign in' %><br />
  <%= link_to "Forgot your password?", new_password_path('user') %>
</div>
<% end %>